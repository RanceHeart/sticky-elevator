{
  "compilerOptions": {
    // ⭐ alias 基础
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "jsxImportSource": "react", // ✅ 添加以避免 jsx-dev-runtime 报错
    "strict": true,
    /* 仅构建库时需要的声明 */
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
